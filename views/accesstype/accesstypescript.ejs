<script>
  $(document).ready(function () {
    let accesstypecode = "";
    let status = "";

    LoadTable();

    $("#accesstype-dataTable tbody").on("click", "tr", function () {
      var dataRow = [];
      $(this)
        .closest("tr")
        .find("td")
        .each(function () {
          dataRow.push($(this).text());
        });
      console.log(dataRow);
      accesstypecode = dataRow[0];
      status = dataRow[2];
    });

    $(document).on("click", "#editBtn", function () {
      $("#accesstypecode").val(accesstypecode);
      $("#accesstypeModal").modal("show");
      console.log(accesstypecode);
    });

    $(document).on("click", "#addBtn", function () {
      let accesstypename = $("#accesstypename").val();

      var message = "";

      if (accesstypename == "") {
        message += "accesstype Name";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/accesstype/save",
          data: {
            accesstypename: accesstypename,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              warning("Exist", `${accesstypename} has already registered!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    //Edit Update
    $(document).on("click", "#saveBtn", function () {
      let accesstypenamemodal = $("#accesstypenamemodal").val();

      var message = "";

      if (accesstypenamemodal == "") {
        message += "ACCESS TYPE NAME ";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/accesstype/edit",
          data: {
            accesstypenamemodal: accesstypenamemodal,
            accesstypecode: accesstypecode,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              warning("Exist", `${accesstypenamemodal} already exist!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    //Status Update
    $(document).on("click", "#activeBtn", function () {
      console.log(accesstypecode);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/accesstype/status",
        data: {
          status: status,
          accesstypecode: accesstypecode,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${accesstypecode} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    $(document).on("click", "#inactiveBtn", function () {
      console.log(accesstypecode);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/accesstype/status",
        data: {
          status: status,
          accesstypecode: accesstypecode,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${accesstypecode} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    function LoadTable() {
      $("#accesstype-dataTable").DataTable({
        destroy: true,
        processing: true,
        serverSide: true,
        paging: false,
        searching: false,
        info: false,
        scrollY: 400,
        scrollCollapse: true,
        serverMethod: "GET",
        ajax: {
          url: "/accesstype/load",
          dataSrc: (json) => {
            var finalData = [];
            var data = json.data;

            console.log(data);
            $.each(data, (key, item) => {
              var action = "";
              var status = item.status;

              if (status == "ACTIVE") {
                action =
                  '<button id="editBtn" class="btn btn-outline-primary" name="editBtn" data-toggle="modal" data-target="#departmentModal">EDIT</button> <button id="inactiveBtn" class="btn btn-outline-primary" name="inactiveBtn">INACTIVE</button>';
              }
              if (status == "INACTIVE") {
                action =
                  '<button id="editBtn" class="btn btn-outline-primary" name="editBtn" data-toggle="modal" data-target="#departmentModal">EDIT</button> <button id="activeBtn" class="btn btn-outline-primary" name="activeBtn">ACTIVE</button>';
              }

              finalData.push({
                accesscode: item.accesscode,
                accessname: item.accessname,
                status: item.status,
                createdby: item.createdby,
                createddate: item.createddate,
                action: action,
              });
            });

            return finalData;
          },
        },
        columnDefs: [
          {
            targets: 1,
            className: "td-indent",
          },
        ],
        columns: [
          { data: "accesscode" },
          { data: "accessname" },
          { data: "status" },
          { data: "createdby" },
          { data: "createddate" },
          { data: "action" },
        ],
        initComplete: function () {},
      });
    }
  });
</script>
